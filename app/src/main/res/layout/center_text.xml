<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/include_image_top_list"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_album"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingLeft="@dimen/size_padding_right"
            android:text="@string/title_text_of_center"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_default" />

        <include layout="@layout/heart_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_padding_right">

        <ImageView
            android:layout_width="@dimen/size_icons"
            android:layout_height="@dimen/size_icons"
            android:src="@drawable/ic_heart_red" />

        <TextView
            android:id="@+id/vote_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_left_text_image"
            android:text="@string/txt_vote_count"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="@dimen/size_icons"
            android:layout_height="@dimen/size_icons"
            android:src="@drawable/ic_baseline_hearing_24" />

        <TextView
            android:id="@+id/watched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_left_text_image"
            android:text="@string/txt_watched"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>